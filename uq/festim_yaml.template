# FESTIM Model Configuration Template
# Parameters marked with $ will be replaced by EasyVVUQ

model_parameters:
  total_time: 25.0
  T_0: $T_0$
  heat_model: 'none'
  transient: False

geometry:
  coordinate_system: "spherical"
  length: 3.5e-4

materials:
  D_0: $D_0$ #1.0e-7  # Diffusion coefficient
  E_D: $E_D$ #0.2 # Activation energy
  thermal_conductivity: 33.0  # thermal conductivity in [W/(m*K)]
  rho: 1000.0 # density in [kg/mÂ³]
  heat_capacity: 100.0  # specific heat capacity in [J/(kg*K)]

simulation:
  n_elements: 1024
  time_step: 0.05
  max_stepsize: 0.1
  stepsize_change_ratio: 1.1
  absolute_tolerance: 1.0e+10
  relative_tolerance: 1.0e-10
  output_directory: "results/"
  milestone_times: [0.1, 0.2, 0.5, 1.0, 5.0, 10.0, 25.0]

boundary_conditions:
  concentration:
    left:
      type: "neumann"
      value: 0.0
    right:
      type: "dirichlet"
      value: 1.0e15
  temperature:
    left:
      type: "dirichlet"
      value: 300.0
    right:
      type: "convective_flux"
      Text_value: 650.0
      hcoeff_value: 100.0

source_terms:
  concentration:
    source_type: "constant"
    source_value: 1.0e20
  heat:
    source_type: "constant"
    source_value: 1.0e+3